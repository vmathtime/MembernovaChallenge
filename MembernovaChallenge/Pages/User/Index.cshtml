@page
@{
    ViewData["Title"] = "User";
}

<div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">First name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Request.Query["firstName"]" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Last name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Request.Query["lastName"]" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Request.Query["Email"]" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Region</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Request.Query["region"]" readonly />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Country</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" value="@Request.Query["country"]" readonly />
        </div>
    </div>
</div>
